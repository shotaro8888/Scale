<div class="container">
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4">
      <table class="table table-bordered table-dark">
        <thead>
          <tr><th>魚種一覧（名前を押すと詳しく見れます！）</th></tr>
        </thead>
        <% @fishes.each do |fish| %>
        <tbody>
          <tr>
            <td><%= link_to fish_path(fish.id), class: 'text-white' do %><%= fish.fish_name %><% end %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-4"></div>
  </div>
</div>