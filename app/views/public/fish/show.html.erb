<div class="container">
  <div class="row mt-3">
    <h2>・<%= @fish.fish_name %></h2>
  </div>
  <div class="row mt-3">
    <div class="col-5">
      <%= image_tag @fish.get_image(500,500), class: "img-fluid" %>
    </div>
    <div class="col-7">
      <div class="card w-75 mb-3">
        <div class="card-body">
          <h5 class="card-title">豆知識</h5>
          <p class="card-text"><%= @fish.introduction %></p>
          <h5 class="card-title">・旬</h5>
          <p class="card-text"><%= @fish.season %></p>
          <h5 class="card-title">・おすすめの食べ方</h5>
          <p class="card-text"><%= @fish.recommendation %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% @posts.each do |posts| %>
    <%= link_to post_path(posts.id) do %><%= posts.title %><% end %>
    <% end %>
  </div>
</div>