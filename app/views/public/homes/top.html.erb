<div class="container">
  <div class="row mt-3">
    <h2 class="text-white bg-dark">トップページ</h2>
  </div>
  <div class="row mt-3">
    <div class="col-3">
      <table class="table table-bordered table-dark">
        <thead>
          <tr><th><%= link_to "魚種一覧", fish_index_path, class: 'text-white' %></th></tr>
        </thead>
        <% @fishes.each do |fish| %>
        <tbody>
          <tr>
            <td><%= link_to fish_path(fish.id), class: 'text-white' do %><%= fish.fish_name %><% end %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-6">
      <%= image_tag 'tai2.png', class: "img-fluid" %>
    </div>
    <div class="col-3">
      <table class="table table-bordered table-dark">
        <thead>
          <tr><th><%= link_to "投稿一覧", posts_path, class: 'text-white' %></th></tr>
        </thead>
        <% @posts.each do |posts| %>
        <tbody>
          <tr>
            <td><%= link_to post_path(posts.id), class: 'text-white' do %><%= posts.title %><% end %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>