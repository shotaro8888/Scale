<div class="container">
  
  <div class="row mt-3">
    <h2 class="text-white bg-dark">マイページ</h2>
  </div>
  <div class="row">
    <div class="col-lg-4 mt-3">
      <%= render 'list', user: @user %>
    </div>
    
    <div class="col-lg-8 d-flex flex-row mt-3">
        <% @posts.each do |posts| %>
          <div class="ml-3">
            <div class="card" style="width: 18rem;">
              <%= image_tag posts.get_image(300,200), class: "img-fluid" %>
              <div class="card-body">
                <%= image_tag posts.user.get_profile_image(100,100), class: "img-fluid" %>
                <h5 class="card-title"><%= posts.title %></h5>
                <p class="card-text"><%= posts.content %></p>
                <p class="card-text"><%= link_to "#{posts.post_comments.count} コメント", post_path(posts.id) %></p>
                <%= link_to "詳細画面へ", post_path(posts.id), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4"></div>
    <div class="col-4"><%= paginate @posts %></div>
  </div>
</div>
