<div class="container">
  
  <%= form_with model: @post do |f| %>
  <div class="check_box">
  <span>タグ</span>
    <%= f.collection_check_boxes(:fish_id, Fish.all, :id, :fish_name) do |tag| %>
    <div>
     <%= tag.label do %>
       <%= tag.check_box %>
       <%= tag.text %>
     <% end %>
    </div>
    <% end %>
  </div>
  <div class="row d-flex flex-column">
    <li><label>画像</label><%= f.file_field :image, accept: "image/*" %></li>
    <li><label>タイトル</label><%= f.text_field :title %></li>
    <li><label>内容</label><%= f.text_area :content %></li>
    <li><label>レシピ</label><%= f.text_area :recipe %></li>
    <li><label>捌き方</label><%= f.text_area :method %></li>
    <li><label>魚種</label><%= f.collection_select :fish_id, Fish.all, :id, :fish_name , { include_blank: '選択してください'}, {class: 'form-controll', required: true } %></li>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4"><%= f.submit '新規投稿' %></div>
    <div class="col-4"></div>
  </div>
  <% end %>
</div>


