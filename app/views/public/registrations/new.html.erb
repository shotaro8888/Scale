<div class="container">
  <div class="row mt-3">
    <h2>サインアップ</h2>
  </div>
  <div class="row">
    <div class="col-offset-2 col-8 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
      
        <tr>
          <th>名前</th>
          <td><%= f.label :last_name, "(姓)　" %><%= f.text_field :last_name %><%= f.label :first_name, "(名)　" %><%= f.text_field :first_name %></td>
        </tr>
        
        <tr>
          <th>名前（カナ）</th>
          <td><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana %><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana %></td>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        
        <tr>
          <th><%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
          </th>
          <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        
        <tr>
          <th><%= f.label :password_confirmation, "パスワード（確認用）" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
          
      </table>

      <div class="actions text-center">
        <div class="mt-3">
        <%= f.submit "Sign up", class: 'btn btn-md btn-info' %>
        </div>
        <div class="mt-3">
        <p>既に登録済みの方は、<%= link_to "こちら", new_user_session_path %>からログインしてください</p>
        </div>
      </div>
      
      </div>
    </div>
    <% end %>
  </div>
</div>

