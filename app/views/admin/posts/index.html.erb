<div class="container">
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4">
      <table class="table table-bordered table-dark">
        <thead>
          <tr>
            <th>投稿タイトル</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <% @posts.each do |posts| %>
        <tbody>
          <tr>
            <td><%= link_to admin_post_path(posts.id), class: 'btn btn-primary' do %><%= posts.title %><% end %></td>
            <td><%= link_to "#{posts.post_comments.count} コメント", admin_post_path(posts.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-4"></div>
  </div>
</div>